
// Job paramaters to set for this environment

params.metaphlan_db = "/ifs/data/nfs_share/ikmb_repository/databases/Chocophlan/12-2019/"

params.kaiju_db = "/ifs/data/nfs_share/ikmb_repository/databases/Kaiju/2018-06/refseq"

params.pathoscope_db = "/ifs/data/nfs_share/ikmb_repository/databases/Pathoscope/2015-06"

params.kneaddata_db = "/ifs/data/nfs_share/ikmb_repository/databases/Kneaddata/11-2019/drupal/Homo_sapiens_Bowtie2_hg37_decoys_contaminants_v0.1"

params.ref = "/ifs/data/nfs_share/ikmb_repository/references/gatk/v2/hg38/Homo_sapiens_assembly38.fasta"

params {
	genomes {
                'human' {
                        kneaddata_db = "/ifs/data/nfs_share/ikmb_repository/databases/Kneaddata/11-2019/drupal/Homo_sapiens_Bowtie2_hg37_decoys_contaminants_v0.1"
                }
                'mouse' {
                        kneaddata_db = "/ifs/data/nfs_share/ikmb_repository/databases/Kneaddata/11-2019/mouse_C57BL_6NJ"
                }
        }
}

// Resource manager settings

singularity {
  enabled = true
  runOptions = "-B /ifs"
  cacheDir = "/ifs/data/nfs_share/ikmb_repository/singularity_cache"
}

executor {
  name="slurm"
  queueSize=50
}

// Process setting

process {

  // Global cluster parameters
  executor = 'slurm'
  queue = 'ikmb_a'
  clusterOptions = { '--qos=ikmb_a' }

}
